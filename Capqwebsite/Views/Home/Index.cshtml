<style>
	/* Slider container */
	.slider-container {
		width: 90%;
		max-width: 1100px;
		height: 420px;
		margin: 60px auto;
		position: relative;
		overflow: hidden;
		border-radius: 20px;
		box-shadow: 0 25px 50px rgba(0, 0, 0, .25);
	}

	/* Slides */
	.slide {
		display: none; /* hide all slides by default */
		width: 100%;
	}

		/* Active slide */
		.slide.active {
			display: block; /* show only active slide */
		}

		/* Images */
		.slide img {
			width: 100%;
			height: auto;
			display: block;
		}

	/* Arrows */
	.prev, .next {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		background-color: rgba(0,0,0,0.5);
		color: white;
		border: none;
		padding: 12px;
		cursor: pointer;
		font-size: 18px;
		border-radius: 50%;
	}

	.prev {
		left: 10px;
	}

	.next {
		right: 10px;
	}

	/* Dots */
	.dots {
	position: absolute;
	bottom: 15px; /* place it near the bottom of the slider */
	width: 100%;
	text-align: center;
	z-index: 10;
}

.dot {
	display: inline-block;
	width: 12px;
	height: 12px;
	margin: 0 5px;
	background-color: #bbb;
	border-radius: 50%;
	cursor: pointer;
}

.dot.active {
	background-color: #717171;
}

</style>
