<script>
	document.addEventListener("DOMContentLoaded", function () {

	  const adsSwiper = new Swiper(".adsSwiper", {
		slidesPerView: 3,
		spaceBetween: 25,
		loop: true,
		grabCursor: true,
		observer: true,
		observeParents: true,
		dir: "rtl",

		navigation: {
		  nextEl: ".swiper-button-next",
		  prevEl: ".swiper-button-prev",
		},

		breakpoints: {
		  0: { slidesPerView: 1 },
		  768: { slidesPerView: 2 },
		  992: { slidesPerView: 3 },
		},
	  });

	});
</script>
