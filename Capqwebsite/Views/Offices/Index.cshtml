        @functions {
            public string ConvertToEmbedUrlWithoutApi(string shortUrl)
            {
                try
                {
                    using (var client = new System.Net.Http.HttpClient())
                    {
                        // منع تحميل المحتوى الكبير، فقط متابعة Redirect
                        client.Timeout = TimeSpan.FromSeconds(5);

                        var response = client.GetAsync(shortUrl, HttpCompletionOption.ResponseHeadersRead).Result;
                        var finalUrl = response.RequestMessage.RequestUri.ToString();

                        // البحث عن lat,lng داخل الرابط
                        var match = System.Text.RegularExpressions.Regex.Match(finalUrl, @"@([-0-9.]+),([-0-9.]+),\d+\.?\d*z");
                        if (match.Success)
                        {
                            string lat = match.Groups[1].Value;
                            string lng = match.Groups[2].Value;

                            // رابط Embed مباشر بدون API Key
                            return $"https://www.google.com/maps?q={lat},{lng}&output=embed";
                        }
                    }
                }
                catch
                {
                    return null;
                }
                return null;
            }
        }


