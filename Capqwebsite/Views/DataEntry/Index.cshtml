@*@model  EF.Models.WebsiteTypeDetail *@
@model List<EF.Models.WebsiteTypeDetail>
<div class="container-fluid py-1">
    <div class="container py-2">
        <div class="row align-items-center py-4">
            <div class="col-md-6 text-center text-md-right">
                <i class="fas fa-add icon-style"></i>
                <h3 class="mb-4 mb-md-0 text-primary text-uppercase output"> اضافة  @(ViewBag.TypeAr ?? "Not specified") </h3>
            </div>
            <div class="col-md-6 text-center text-md-left">
                <div class="d-inline-flex align-items-center">
                    <a class="btn btn-secondary" href="">اضافة </a>

                </div>
            </div>
        </div>
    </div>
</div>


<!-- Page Header Start -->
<div class="container-fluid bg-light">
    <div class="container">

        @if (TempData["WarningMessage"] != null)
        {
            <div style="background-color: #fff3cd; color: #856404; border: 1px solid #ffeeba; padding: 12px; margin-bottom: 20px; border-radius: 6px; font-size: 16px;">
                @TempData["WarningMessage"]
            </div>
        }
        @if (ViewBag.ID == 12 && ViewBag.ID != 9)
        {

            <form asp-controller="DataEntry" id="myForm" asp-action="Index" method="post" enctype="multipart/form-data">
                <input name="WebsitetypeID" id="WebsitetypeID" type="hidden" value=@(ViewBag.ID ?? "Not specified") />
                <div class="row">
                    <label>الاسم</label>
                    <input name="TitleAr" type="text" class="form-control p-4" data-validation-required-message="برجاء ادخال الاسم" aria-invalid="false">
                    <p class="help-block text-danger"></p>
                </div>
                <br />
                <div class="row">
                    <label>العنوان</label>
                    <input name="descAr" type="text" class="form-control p-4" data-validation-required-message="برجاء ادخال العنوان" aria-invalid="false">
                    <p class="help-block text-danger"></p>
                </div>
                <br />
                <div class="row">
                    <label>الهاتف</label>
                    <input name="TitleEn" type="text" class="form-control p-4" data-validation-required-message="برجاء ادخال الهاتف" aria-invalid="false">
                    <p class="help-block text-danger"></p>
                </div>
                <br />

                <br />
                <div class="row">
                    <label>الرابط الإلكتروني</label>
                    <input name="linkURL" type="text" class="form-control p-4" autocomplete="off" />
                    <p class="help-block text-danger"></p>
                </div>
                <br />
                <div>
                    <button class="btn btn-primary py-3 px-5" type="submit">حفظ</button>
                </div>
            </form>
        }
        else
        {
            <form asp-controller="DataEntry" id="myForm1" asp-action="Index" method="post" enctype="multipart/form-data">
                <input name="WebsitetypeID" id="WebsitetypeID" type="hidden" value=@(ViewBag.ID ?? "Not specified") />
                @if (ViewBag.ID != 9 && ViewBag.ID != 4 && ViewBag.ID != 5 && ViewBag.ID != 6 && ViewBag.ID != 13 && ViewBag.ID != 14)
                {
                    /////////////////////////////////upload  pdf 11-12-2025//////////////////////////////////////

                    ////////////////////////////////////////////////////////////////////////
                    <div class="row">
                        <label>عنوان باللغة العربية</label>
                        <input name="TitleAr" type="text" class="form-control p-4" data-validation-required-message="برجاء ادخال عنوان باللغة العربية" aria-invalid="false">
                        <p class="help-block text-danger"></p>
                    </div>
                    <br />
                    <div class="row">
                        <label>عنوان باللغة الانجليزية</label>
                        <input name="TitleEn" type="text" class="form-control p-4" data-validation-required-message="برجاء ادخال عنوان باللغة الانجليزية" aria-invalid="false">
                        <p class="help-block text-danger"></p>
                    </div>
                    <br />
                    <div class="row">
                        <label>التاريخ </label>
                        <input name="Date" type="date" class="form-control p-4" autocomplete="off" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <br />

                    <div class="row">
                        <label>التفاصيل باللغة العربية</label>
                        <textarea name="descAr" rows="3" class="form-control p-4" autocomplete="off"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <br />

                    <div class="row">
                        <label>التفاصيل باللغة الانجليزية</label>
                        <textarea name="descEn" rows="3" class="form-control p-4" autocomplete="off"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <br />
                }
                @if (ViewBag.ID != 4 && ViewBag.ID != 5 && ViewBag.ID != 6 && ViewBag.ID != 13 && ViewBag.ID != 14)
                {
                    <div class="row">
                    <label> اختر صورة</label>
                    <input name="imageFile" type="file" class="form-control">
                    <p class="help-block text-danger"></p>
                    </div>
                }
                @if (ViewBag.ID != 9 && ViewBag.ID != 4 && ViewBag.ID != 5 && ViewBag.ID != 6 && ViewBag.ID != 13 && ViewBag.ID != 14)
                {
                    <br />
                    <div class="row">
                        <label>الرابط الإلكتروني</label>
                        <input name="linkURL" type="text" class="form-control p-4" autocomplete="off" />
                        <p class="help-block text-danger"></p>
                    </div>
                }
                <br />
                @* /////////////////////////pdf/////////////////////////////////// *@
                @if (ViewBag.ID == 4 || ViewBag.ID == 5 || ViewBag.ID == 6 || ViewBag.ID == 13 || ViewBag.ID == 14)
                {
                    <div class="row">
                        <label> اختر ملف</label>
                        <input name="imageFile" type="file" class="form-control">
                        <p class="help-block text-danger"></p>
                    </div>
                }
                @* ///////////////////////////////////////////////// *@
                <div id="div3">
                    <button class="btn btn-primary py-3 px-5" type="submit">حفظ</button>
                </div>
            </form>
        }
    </div>

</div>

