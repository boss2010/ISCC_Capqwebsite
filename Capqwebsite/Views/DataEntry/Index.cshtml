@* < !--Data Table Section --> *@
@if (ViewBag.ID == 12)
{
    <div id="div1">
        <table class="table table-bordered table-striped table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th> الاسم </th>
                    <th> العنوان  </th>
                    <th> الهاتف </th>

                    <th> الرابط </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

                {

                    <tr>

                        <td> @item.TitleAr </td>

                        <td> @item.descAr </td>
                        <td> @item.descEn </td>



                        <td>
                            @if (!string.IsNullOrEmpty(item.linkURL))

                            {

                                @* <a href = "@item.linkURL" target = "_blank" > فتح الرابط </a> *@
