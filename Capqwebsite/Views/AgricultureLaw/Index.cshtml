<!-- Page Header Start -->
@model List<EF.Models.WebsiteTypeDetail>
<div class="container-fluid py-1">
	<div class="container py-2">
		<div class="row align-items-center py-4">
			<div class="col-md-6 text-center text-md-right">
				<i class="fas fa-phone icon-style"></i>
				<h3 class="mb-4 mb-md-0 text-primary text-uppercase output">@ViewBag.TypeAr </h3>
			</div>
			<div class="col-md-6 text-center text-md-left">
				<div class="d-inline-flex align-items-center">
					<a class="btn btn-secondary" href="">تشريعات</a>
					<i class="fas fa-angle-double-right text-primary mx-2"></i>
					<a class="btn btn-secondary disabled" href="">@ViewBag.TypeAr</a>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Page Header Start -->
<!-- Contact Start -->
<div class="container-fluid bg-light">
	<div class="container">
		<div class="row">
			<div class="mb-5">
				@* ////////////////////////////*@
				@{
					if (Model != null && Model.Count > 0)
					{
						foreach (var item in Model)
						{

							<h3 class="mb-4 section-title">@item.TitleAr</h3>
							<div class="media mb-4">
								<div class="media-body">


									<h6>   التاريخ:  <small><i>@item.Date</i></small></h6>
									<p>@item.descAr</p>
									@* <img src="@Url.Content(item.filepath)" alt="image">*@

								</div>
							</div>
						}
					}
				}
			</div>
		</div>

	</div>
</div>
<!-- Contact End -->
<div class="container-fluid bg-light">
	<div class="container">
		<div class="row">
			<div class="ag-format-container  col-md-4">
				<div class="ag-courses_box">
					<div class="ag-courses_item">
						<a href="#" class="ag-courses-item_link">
							<div class="ag-courses-item_bg"></div>

							<div class="ag-courses-item_title">
عنوان الملف 							
</div>

							<div class="ag-courses-item_date-box">
								Start:
								<span class="ag-courses-item_date">
									04.11.2022
								</span>
							</div>
						</a>
					</div>

				</div>
			</div>




			<!-- العنوان فوق الزر -->
			<h2 style="text-align:center; margin-bottom:20px; font-family:Arial, sans-serif; color:#333;">
				عنوان الملف 
			</h2>

			<!-- الزر -->
			<div style="text-align:center; margin-bottom:40px;">
				<a href="#" id="openPdf" style="padding:12px 25px; background:#007bff; color:white; text-decoration:none; border-radius:5px; font-size:16px;">افتح الملف</a>
			</div>

			<!-- Pop-up -->
			<div id="pdfModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.85); z-index:9999;">
				<span id="closeModal" style="position:absolute; top:20px; right:30px; cursor:pointer; color:white; font-size:28px; font-weight:bold;">✖</span>
				<iframe id="pdfFrame" src="" style="width:80%; height:80%; margin:50px auto; display:block; border:none; border-radius:8px;"></iframe>
			</div>

			<script>
				const pdfUrl = "https://tuya-tech.com/assetes/Tuya-Profile-E.pdf"; // ضع هنا رابط PDF
				const modal = document.getElementById("pdfModal");
				const frame = document.getElementById("pdfFrame");

				document.getElementById("openPdf").onclick = function(e){
				  e.preventDefault();
				  frame.src = pdfUrl;
				  modal.style.display = "block";
				};

				document.getElementById("closeModal").onclick = function(){
				  modal.style.display = "none";
				  frame.src = ""; // لإيقاف تحميل الـ PDF عند الإغلاق
				};
			</script>


		</div>

	</div>
</div>				
