@model List<EF.Models.WebsiteTypeDetail>
<!-- Page Header Start -->
<div class="container-fluid py-1">
    <div class="container py-2">
        <div class="row align-items-center py-4">
            <div class="col-md-6 text-center text-md-right">
                <i class="fas fa-newspaper icon-style"></i>
                <h3 class="mb-4 mb-md-0 text-primary text-uppercase output">@ViewBag.TypeAr</h3>
            </div>
            <div class="col-md-6 text-center text-md-left">
                <div class="d-inline-flex align-items-center">
                    @* <a class="btn btn-secondary" href="http://localhost:5205/Home/HomePage/Index">الصفحة الرئيسية</a> *@
                    <a href="@Url.Action("Index", "Home")" class="dropdown-item">
                        الصفحة الرئيسية
                    </a>
                    <i class="fas fa-angle-double-right text-primary mx-2"></i>
                    <a class="btn btn-secondary disabled" href="">@ViewBag.TypeAr</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header Start -->

<!-- Contact Start -->
<div class="container-fluid bg-light">
    <div class="container">
        <div class="row pb-3">
            @foreach (var item in @Model) {
                <div class="col-md-4 mb-4">
                    <div class="card border-0 mb-2">
                        <img class="card-img-top img-height" src="@item.filepath" alt="">
                        <div class="card-body bg-white p-4">
                            <div class="d-flex align-items-center mb-3">
                                <h5 class="m-0 ml-3 text-truncate">@item.TitleAr</h5>
                                <a href="@Url.Action("RowDetail", "News", new { ID = item.ID,Type=@ViewBag.TypeAr })" class="btn btn-primary">
                                    <i class="fa fa-link"></i>
                                </a>
                               
                            </div>
                            <p>@item.descAr</p>

                        </div>
                    </div>
                </div>
               
            }
        </div>
        @* ////////////////////////Page navigation//////////////////////// *@


        @* ////////////////////////Page navigation//////////////////////// *@
        <div class="col-md-12 mb-4">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">                                                                                       
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">«</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">»</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<!-- Contact End -->